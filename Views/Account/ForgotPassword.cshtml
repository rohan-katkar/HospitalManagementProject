@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row">
    <div class="border p-3 col-md-6 margin-auto">
        <form method="post">
            <div class="row pb-2">
                <h2 class="text-primary">Reset Password</h2>
                <hr />
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Password Reset</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to Home
            </a>
        </form>
    </div>
</div>
