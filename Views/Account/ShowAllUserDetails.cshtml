@model IEnumerable<User>
@{
    ViewData["Title"] = "Show All User Details";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Doctor List</h2>
		</div>
		@*<div class="col-6 text-end">
			<a asp-controller="Account" asp-action="Register" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Create User
			</a>
		</div>*@
	</div>

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					UserName
				</th>
				<th>
					First Name
				</th>
				<th>
					Last Name
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model){
				<tr>
					<td width="25%">
						@obj.UserName
					</td>
					<td width="25%">
						@obj.FirstName
					</td>
					<td width="25%">
						@obj.LastName
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Account" asp-action="AssignRole" asp-route-id="@obj.Id"
								class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Assign Role</a>
						</div>
					</td>
					@*<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Doctor" asp-action="Delete" asp-route-id="@obj.Id"
						   class="btn btn-primary mx-2"><i class="bi bi-trash"></i>Delete</a>
						</div>
					</td>*@
				</tr>
			}
		</tbody>
	</table>
</div>
