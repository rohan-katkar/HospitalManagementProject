@model IEnumerable<Department>
@{
	ViewData["Title"] = "List of Departments";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Departments List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Department" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Add Department
			</a>
		</div>
	</div>

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Department Id
				</th>
				<th>
					Department Name
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model){
				<tr>
					<td width="50%">
						@obj.DepartmentId
					</td>
					<td width="50%">
						@obj.DepartmentName
					</td>
					@*<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.DepartmentId"
								class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
						</div>
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.DepartmentId"
						   class="btn btn-primary mx-2"><i class="bi bi-trash"></i>Delete</a>
						</div>
					</td>*@
				</tr>
			}
		</tbody>
	</table>
</div>
