@model User
@{
    ViewData["Title"] = "ShowOneUser";
}

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Show User Information</h2>
        <hr />
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" readonly />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" readonly />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PasswordHash"></label>
        <input asp-for="PasswordHash" class="form-control" readonly />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    <a asp-controller="User" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to List
    </a>
</div>
