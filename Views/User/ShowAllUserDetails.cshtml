@model List<User>
@{
    ViewData["Title"] = "List users";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Doctor List</h2>
		</div>
	</div>

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					UserName
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model){
				<tr>
					<td width="75%">
						@obj.UserName
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="User" asp-action="ShowOneUser" asp-route-id="@obj.UserId"
								class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Show</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
