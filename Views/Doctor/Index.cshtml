@model IEnumerable<Doctor>
@{
	ViewData["Title"] = "List of Doctors";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Doctor List</h2>
		</div>
		@if(User.IsInRole("Admin"))
		{
			<div class="col-6 text-end">
				<a asp-controller="Doctor" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> &nbsp; Add new Doctor
				</a>
			</div>
		}
	</div>

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Doctor Id
				</th>
				<th>
					Doctor Name
				</th>
				<th>
					Contact
				</th>
				<th>
					Department
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model){
				<tr>
					<td width="25%">
						@obj.Id
					</td>
					<td width="25%">
						@obj.DoctorName
					</td>
					<td width="25%">
						@obj.Contact
					</td>
					<td width="25%">
						@obj.Department.DepartmentName
					</td>
					@if (User.IsInRole("Admin"))
					{
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Doctor" asp-action="Edit" asp-route-id="@obj.Id"
								class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
							</div>
						</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Doctor" asp-action="Delete" asp-route-id="@obj.Id"
						   class="btn btn-primary mx-2"><i class="bi bi-trash"></i>Delete</a>
							</div>
						</td>
					}
				</tr>
			}
		</tbody>
	</table>
</div>

