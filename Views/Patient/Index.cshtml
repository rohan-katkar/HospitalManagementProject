@model IEnumerable<Patient>
@{
	ViewData["Title"] = "List of Patients";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Patients List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Patient" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Add Patient
			</a>
		</div>
	</div>

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Patient Id
				</th>
				<th>
					Patient Name
				</th>
				<th>
					Primary Contact
				</th>
				<th>
					Secondary Contact
				</th>
				<th>
					Doctor Name
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model){
				<tr>
					<td width="20%">
						@obj.Id
					</td>
					<td width="20%">
						@obj.PatientName
					</td>
					<td width="20%">
						@obj.PrimaryContact
					</td>
					<td width="20%">
						@obj.SecondaryContact
					</td>
					<td width="20%">
						@obj.Doctor.DoctorName
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Patient" asp-action="Edit" asp-route-id="@obj.Id"
								class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
						</div>
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Patient" asp-action="Delete" asp-route-id="@obj.Id"
						   class="btn btn-primary mx-2"><i class="bi bi-trash"></i>Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
